/* pages/detail-search/detail-search.wxss */
page {
  padding: 0 20rpx;
  padding-top: 54px;
}

/* 搜索栏 */
.search {
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
}

/* 搜索结果 */
.suggest {
  padding: 10rpx;
}

.title {
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
}

.item {
  margin-top: 16rpx;

  display: flex;
  align-items: center;
}

.icon {
  width: 66rpx;
  margin-left: -20rpx;
}

/* 热门搜索 */
.hot {
  padding: 10rpx;
}

.keywords {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.tag:first-of-type {
  color: #26ce8a;
}
