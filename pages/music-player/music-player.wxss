/* pages/music-player/music-player.wxss */
page {
  color: #fff;
}

.bg-image,
.bg-cover {
  width: 100%;
  height: 100%;

  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(30px);
}

/* 自定义导航 */
.tab {
  font-size: 28rpx;
  color: #999;

  display: flex;
}

.divider {
  margin: 0 14rpx;
}

.active {
  color: #fff;
}

/* 内容 */
.content {
  color: #fff;
}

.music {
  box-sizing: border-box;
  padding: 30rpx 60rpx;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 封面 */
.album {
  flex: 5;

  display: flex;
  align-items: center;
}

.image {
  width: 100%;
  border-radius: 12rpx;
}

/* 歌曲信息 */
.info {
  margin: 20rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
}

.artist,
.alia {
  font-size: 26rpx;
  color: #ccc;
  margin: 16rpx 0;
}

/* 歌词 */
.lyric {
  flex: 1;

  display: flex;
  align-items: center;
  justify-content: center;
}

/* 进度 */
.progress {
  margin: 10rpx 0;
}

.slider {
  margin: 0 0 18rpx 20rpx;
}

.time {
  color: #ccc;
  font-size: 22rpx;

  display: flex;
  justify-content: space-between;
}

.current {
  margin-left: 10rpx;
}

/* 操作 */
.operation {
  margin: 20rpx 0 30rpx;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;

  display: inline-block;
}

.btn-mode {
  width: 80rpx;
  height: 80rpx;
}

.btn-pause {
  width: 130rpx;
  height: 130rpx;
}

/* 歌词分页 */
.lyric-list {
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.item {
  height: 35px;
  line-height: 35px;
  font-size: 28rpx;
  text-align: center;
  color: #989898;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item.active {
  color: #26ce8a;
  font-size: 36rpx;
}
