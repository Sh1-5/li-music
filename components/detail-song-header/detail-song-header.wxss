/* components/detail-song-header/detail-song-header.wxss */
.header {
  width: 100vw;
  height: 450rpx;
  color: #fff;

  display: flex;
  flex-direction: column;

  position: relative;
  left: -20rpx;
}

.bg-image {
  width: 100%;
  height: 100%;

  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.bg-cover {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);

  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.content {
  margin-top: 60rpx;
  padding: 0 50rpx;

  display: flex;
}

.image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}

.info {
  height: 220rpx;
  margin-left: 50rpx;

  flex: 1;

  position: relative;
}

.creator {
  margin-top: 20rpx;

  display: flex;
  align-items: center;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.nickname {
  font-size: 24rpx;
  margin-left: 18rpx;
}

.desc {
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;

  display: inline-block;

  position: absolute;
  bottom: 0;
  left: 0;
}

.operation {
  padding: 30rpx;
  margin-top: 30rpx;

  display: flex;
  justify-content: space-around;
}

.item {
  display: flex;
  align-items: center;
}

.icon {
  width: 48rpx;
  margin-right: 10rpx;
}

.text {
  font-size: 28rpx;
}
