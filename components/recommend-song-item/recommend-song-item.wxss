.item {
  padding: 16rpx 0;

  display: flex;
  align-items: center;
}

.image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.content {
  margin-left: 16rpx;

  flex: 1;
}

.name {
  color: #555;
  font-size: 32rpx;
}

.source {
  color: #999;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}
