/* components/area-header/area-header.wxss */
.header {
  height: 88rpx;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
}

.slot:empty + .default {
  display: flex;
}

.default {
  color: #777;
  font-size: 28rpx;

  display: none;
  align-items: center;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}
