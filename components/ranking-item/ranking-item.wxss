/* components/ranking-item/ranking-item.wxss */
.item {
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background-color: #eee;
  overflow: hidden;

  display: flex;
  justify-content: space-between;
}

.content {
  padding: 24rpx;
  overflow: hidden;

  flex: 1;
}

.content-title {
  font-size: 34rpx;
}

.content-list {
  width: 100%;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.content-list-item {
  width: 100%;
  color: #333;
  margin-top: 6rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-emphasis: none;
  overflow: hidden;

  display: inline-block;
}

.artist {
  color: #999;
}

.album {
  width: 220rpx;

  display: flex;

  position: relative;
}

.image {
  width: 100%;
  height: 100%;

  display: block;
}

.count {
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 10rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.5);

  position: absolute;
  right: 0;
  bottom: 0;
}
